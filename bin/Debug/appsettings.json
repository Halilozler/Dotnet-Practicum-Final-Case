{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtConfig": {
    "Issuer": "www.paramlist.com",
    "Audience": "www.paramlist.com",
    "Secret": "This is my custom secret key for authentication",
    "AccessTokenExpiration": 3
  },
  "ConnectionStrings": {
    "DbType": "SQL-MONGO",
    "DefaultConnection": "Server=listSql,1433; Database=ListDb;User=sa;Password=MyPass@word;Trusted_Connection=False;Pooling=true;TrustServerCertificate=true"
  },
  "MongoSettings": {
    "AgreeListCollectionName": "AgreeList",
    "ConnectionString": "mongodb://listMongo:27017",
    "DatabaseName": "ListDb"
  },
  "RedisSettings": {
    "Host": "localhost",
    "Port": 6379
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Management-1"
    }
  }
}

